---
import HTMLIcon from '../icons/Html.astro'
import CSSIcon from '../icons/Css.astro'
import JavascriptIcon from '../icons/Javascript.astro'
import ReactIcon from '../icons/React.astro'
import GithubIcon from '../icons/GitHub.astro'
import LinkIcon from '../icons/Link.astro'

const TAGS = {
    HTML: {
        name: 'HTML',
        class: 'bg-[#784F00] text-white',
        icon: HTMLIcon
    },
    CSS: {
        name: 'CSS',
        class: 'bg-[#0063A2] text-white',
        icon: CSSIcon
    },
    JAVASCRIPT: {
        name: 'Javascript',
        class: 'bg-[#9A8300] text-white font-semibold',
        icon: JavascriptIcon
    },
    REACT: {
        name: 'React',
        class: 'bg-[#020013] text-[#00d8ff]',
        icon: ReactIcon
    },
    GITHUB: {
        name: 'Code',
        class: 'bg-black text-[#00d8ff]',
        icon: GithubIcon
    },
    LINK: {
        name: 'Demo',
        class: 'bg-black text-[#00d8ff]',
        icon: LinkIcon
    }

}

// Objeto con la informaci贸n de cada proyecto
const PROJECTS = [
    {
        title: 'Arkanoid Game',
        description: 'Juego del Arkanoid realizado con Vanilla JavaScript.',
        github: 'https://github.com/Markix1/Javascript-Projects',
        link: 'https://arkanoidgamejavascript.netlify.app/',
        image: '/projects/arkanoid_game.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT]
    },
    {
        title: 'Tinder Swipe',
        description: 'Deslizador de Tinder realizado con Vanilla Javascript.',
        github: 'https://github.com/Markix1/Javascript-Projects',
        link: 'https://tinderswipejavascript.netlify.app//',
        image: '/projects/tinder_swipe.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT]
    },
    {
        title: 'App de Verificaci贸n de Cuadros',
        description: 'Aplicaci贸n para realizar verificaci贸n de cuadros de luz realizada con React.',
        github: 'https://github.com/Markix1/App-Verificacion-Cristian',
        link: '',
        image: '/projects/app_verificacion_cuadros.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.REACT]
    },
]
---
<section class='flex flex-col gap-16'>
{
    PROJECTS.map(({ title, description, github, link, image, tags }) => (
        <article class="flex flex-col justify-center items-center py-6">
            <h3 class="text-2xl font-bold dark:text-yellow-300 text-orange-400 mb-3">{title}</h3>
            <p class="text-md mb-6 text-pretty">{description}</p>
            <ul class="flex gap-x-12 flex-row">
            {
                tags.map((tag) => (
                    <li>
                        <span class={`flex gap-2 rounded-full items-center text-xs font-semibold ${tag.class} px-3 pr-4 p-2 mb-10`}>
                            <tag.icon class="size-6" />
                                {tag.name}
                        </span>
                    </li>
                ))
            }
            </ul>
            <img class="size-3/4 rounded shadow-2xl shadow-white/20 mb-6 hover:scale-105 transition" src={image} alt={`Screenshot of the ${title}`}>
            <div class="flex justify-between items-center gap-24 mt-16">
                <button class="flex gap-4 text-sm font-semibold bg-gray-800 hover:bg-gray-900 transition-colors p-4 rounded-full">
                    <GithubIcon class="size-8 lg:size-6" />
                    <a href={github}>Code</a>
                </button>
                <button class="flex gap-4 text-sm font-semibold bg-gray-700 hover:bg-gray-800 transition-colors p-4 rounded-full">
                    <LinkIcon class="size-8 lg:size-6" />
                    <a href={link}>Demo</a>
                </button>
            </div>
        </article>
    ))
}
</div>

