---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import SocialLinks from "../components/SocialLinks.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GitHubIcon from  "../icons/GitHub.astro";
import MailIcon from "../icons/Mail.astro";
import { Image } from "astro:assets";
import logo from '../assets/marco.jpg'
import aboutMePicture from "../assets/marco-2.png";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import BriefcaseIcon from "../icons/Briefcase.astro";
import UserIcon from "../icons/User.astro";
import AboutMe from "../components/AboutMe.astro";
import ClipboardIcon from "../icons/Clipboard.astro"
---

<Layout
  title="Portfolio de Marco - Desarrollador y Programador Web con más de 3 años de experiencia"
  description="Contrata a Marco para crear tu página web única y sostenible. Especializado en crear páginas web úicas y fiables."
>
  <main class="px-6">
    <SectionContainer class="py-12">
      <Image class="rounded-full size-20 mb-8 hover:scale-110 transition-transform duration-300" src={logo} alt="logo" />
      <h1 class="dark:text-white text-2xl md:text-4xl lg:text-4xl font-bold flex flex-row gap-x-3 pb-6 lg:pb-10">
        Buenas, mi nombre es <strong class="dark:text-yellow-300 text-orange-400">Marco</strong>
        <div class="flex justify-center items-center ml-6">
          <a href="https://www.linkedin.com/in/marco-rodriguez-rey-b082361b9/" target="_blank"
            rel="noopener"><Badge>Disponible para trabajar</Badge></a>
        </div>
      </h1>
      <h2 class="text-xl lg:text-1xl text-wrap max-w-[700px]">
        <strong class="text-orange-400">Junior Full Stack Developer</strong> 
        <span class="text-lg font-medium">Madrid, España 🇪🇸</span>
      </h2>

      <nav class="flex gap-x-4 mt-6 flex-wrap">
        <SocialLinks href="https://www.linkedin.com/in/marco-rodriguez-rey-b082361b9/">
          <LinkedInIcon class="size-4 lg:size-6" />
          <span class="hover:text-pink-300">LinkedIn</span>            
        </SocialLinks>
        <SocialLinks href="https://github.com/Markix1">
          <LinkedInIcon class="size-4 lg:size-6" />
          <span class="hover:text-pink-300">GitHub</span>            
        </SocialLinks>
        <SocialLinks href="mailto:marco.valdemoro@gmail.com">
          <MailIcon class="size-4 lg:size-6" />
          <span class="hover:text-pink-300">marco.valdemoro@gmail.com</span>            
        </SocialLinks>
      </nav>
    </SectionContainer>

    <SectionContainer id="experience">
      <h2 class="text-4xl font-semibold flex gap-x-3 justify-center items-center">
        <BriefcaseIcon class="size-8" />
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2 class="text-4xl font-semibold mt-48 mb-10 flex gap-x-4 justify-center items-center">
        <ClipboardIcon class="size-8" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about-me" class="py-10">
      <h2 class="text-4xl font-semibold mb-6 flex gap-x-4 items-center">
        <UserIcon class="size-9" />
        Sobre Mí
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
